<body>
  <header>
    <h1>Ирис брат</h1>
    <p>Легендарная пицца, достойная твоей корзины</p>
  </header>

  <div class="product">
    <img src="https://i.imgur.com/o8QjZ7Q.jpg" alt="Пицца пеперони" />
    <h2>Пеперони</h2>
    <p>666 рублей</p>
    <button onclick="addToCart()">В корзину</button>
  </div>

  <div class="cart">
    <p>Корзина: <span id="cart-count">0</span> товар(ов)</p>
    <button onclick="openModal()">Оформить</button>
  </div>

  <div class="modal" id="modal">
    <div class="modal-content">
      <h3>Ваш заказ</h3>
      <p id="modal-items">Пеперони x <span id="modal-count">0</span></p>
      <p>Итого: <span id="modal-total">0</span> руб.</p>
      <button onclick="payNow()">Оплатить</button>
    </div>
  </div>

  <script>
    let count = 0;
    function addToCart() {
      count++;
      document.getElementById('cart-count').textContent = count;
    }

    function openModal() {
      document.getElementById('modal').style.display = 'flex';
      document.getElementById('modal-count').textContent = count;
      document.getElementById('modal-total').textContent = count * 666;
    }

    function payNow() {
      alert('Спасибо за заказ! Пицца скоро будет у вас.');
      count = 0;
      document.getElementById('cart-count').textContent = count;
      document.getElementById('modal').style.display = 'none';
    }

    window.onclick = function(event) {
      if (event.target.id === 'modal') {
        document.getElementById('modal').style.display = 'none';
      }
    };
  </script>
</body>
